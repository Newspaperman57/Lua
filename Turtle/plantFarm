
local function forward(forwCnt)
	if forwCnt == nil then
		forwCnt = 1
	end
	while forwCnt > 0 do
		if turtle.forward() == false then
			print("ERROR!")
			print("Press enter to continue")
			io.read()
			forward(forwCnt)
		end
		forwCnt = forwCnt - 1
	end
end

pnt1, cnt2, cnt3 = 1, 0, 0 --Counters and pointers

local arg = ( ... ) -- Check for Arguments
arg = tonumber(arg)
term.clear()
term.setCursorPos(1,1)
print("You have choosen ", arg) -- Checking if input is correct
print("If correct press enter")
print("To terminate press CTRL + T")
io.read() -- The user can press enter to continue
arg = arg - 1
ARG = arg
arg2 = arg
while arg2 > -1 do
	while arg > 0 do
		forward()
		turtle.placeDown()
		arg = arg - 1
		if arg > 0 then
			forward()
		end
		arg = arg - 1
	end
	arg = ARG
	if pnt1 == 0 then
		pnt1 = 1
		turtle.turnLeft()
		turtle.forward()
		turtle.turnLeft()
	elseif pnt1 == 1 then
		pnt1 = 0
		turtle.turnRight()
		turtle.forward()
		turtle.turnRight()
	end
	arg2 = arg2 - 1
end
turtle.placeDown()
if pnt1 == 1 then
	turtle.turnRight()
end
turtle.down()