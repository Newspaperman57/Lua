function full()
  while turtle.getItemSpace(15) < 32 do
    term.clear()
	term.setCursorPos(1,3)
    print("||  Please Take wood from slot 3  ||")
    print("||  to 15.                        ||")
    sleep(1)
  end
  term.clear()
end

function moarleaves()
  if turtle.detect() then
  turtle.dig()
  end
end

function getFuel()
  while turtle.getFuelLevel() <100 do 
    turtle.select(2)
    turtle.refuel(1)
    turtle.select(1)
    while turtle.getItemSpace(1) < 32 do
      turtle.refuel(1)
	  sleep(1)
    end
    sleep(1)
    term.clear()
    term.setCursorPos(1,3)
    print("||  There's somehow no fuel left  ||")
    print("||  that must mean that somepony  ||")
    print("||  stole from us, or the         ||")
    print("||  getFuel() function is         ||")
    print("||  running                       ||")
    print("||                                ||")
    print("||  Can somepony please hand me   ||")
    print("||  some more fuel in slot Nr. 2? ||")
  end
  term.clear()
  term.setCursorPos(1,3)
  print("||  Current fuel Level: ",turtle.getFuelLevel(),"       ||")  
end

function bonemeal()
  while not turtle.detect() do
    turtle.select(1)
    if turtle.place() then
      turtle.select(16)
      while not turtle.place() do
        term.clear()
        term.setCursorPos(1,3)
        print("||  No more bone meal? D:         ||")
        sleep(1)
      end
      elseif not turtle.place() then
        term.clear()
        term.setCursorPos(1,1)
        print("||  You have no saplings?         ||")
        print("||                                ||")
        print("||  Can somepony please hand me   ||")
        print("||  Some saplings?                ||")
        print("||  Spruce saplings in slot       ||")
        print("||  Nr. 16 please :)              ||")
        sleep(1)
      end
    end
    turtle.select(1)
  end
 
  
-- Ting og sager

while 1 do
  full()
  getFuel()
  bonemeal()
  turtle.dig()
  while not turtle.forward() do
    turtle.attack()
    sleep(1)
  end
  while turtle.detectUp() do
    turtle.digUp()
    turtle.up()
    moarleaves()
    turtle.turnRight()
    moarleaves()
    turtle.turnRight()
    moarleaves()
    turtle.turnRight()
    moarleaves()
  end

  while not turtle.detectDown() do
    turtle.down()
  end
  while not turtle.back() do
    sleep(1)
  end
  term.clear()
  term.setCursorPos(1,1)
  print("Current fuel level remaining: " ,turtle.getFuelLevel())
  sleep(1)
end