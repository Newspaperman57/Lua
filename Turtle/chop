function getFuel()
 while turtle.getFuelLevel() <100 do 
    turtle.select(16)
    turtle.refuel(1)
    turtle.select(1)
  end
end

function bonemeal()
turtle.select(15)
turtle.place()
turtle.select(1)
end

while true do
  bonemeal()
  turtle.dig()
  turtle.forward()
while turtle.detectUp() do
  turtle.digUp()
  turtle.up()
  turtle.dig()
  turtle.turnRight()
  turtle.dig()
  turtle.turnRight()
  turtle.dig()
  turtle.turnRight()
  turtle.dig()
  getFuel()
end
  while turtle.down() do
    turtle.down()
  end
    turtle.back()
    turtle.place()
    term.clear()
    term.setCursorPos(1,1)
    print("Current fuel level remaining: " ,turtle.getFuelLevel())
    sleep(0)
    getFuel()
  end
