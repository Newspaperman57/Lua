function moarBoneMeal()
  while turtle.getItemSpace(16) == 64 do
  turtle.turnLeft()
  turtle.turnLeft()
    if turtle.detect() then
	  term.clear()
	  term.setCursorPos(1,3)
      print("||  If this is not a chest then    ||")
      print("||  please remove it, thank you.   ||")
      print("||  And if it is a chest then      ||")
      print("||  please add some bone meal.     ||")
      turtle.select(16)
      turtle.drop()
	  turtle.suck()
	  turtle.select(1)
      turtle.turnRight()
      turtle.turnRight()
      else
	  term.clear()
	  term.setCursorPos(1,2)
      print("||  Searching for Bone Meal, in   ||")
      print("||  a chest that might or might   ||")
      print("||  not be there.                 ||")
	  turtle.turnRight()
      turtle.turnRight()
      while not turtle.forward() do
	    turtle.dig()
	    sleep(0.2)
	  end
      turtle.turnLeft()
      while not turtle.back() do
	    sleep(0.2)
	  end
    end
  end
  turtle.select(1)
end 

function full2()
  local argument = "arg"
  if arg == 1 then
    for i = 3,15 do
      turtle.select(i)
      turtle.drop()
    end
  end
end
  
function full()
  full2()
  while turtle.getItemSpace(15) < 32 do
    term.clear()
    term.setCursorPos(1,3)
    print("||  Please Take wood from slot 3  ||")
    print("||  to 15.                        ||")
    sleep(1)
  end
  term.clear()
end


function moarleaves()
  if turtle.detect() then
  turtle.dig()
  end
end

function getFuel()
  while turtle.getItemSpace(1) < 32 do
    turtle.refuel(1)
    sleep(0,05)
  end
  while turtle.getFuelLevel() <100 do 
    turtle.select(1)
    turtle.select(2)
    turtle.refuel(1)
    sleep(1)
    term.clear()
    term.setCursorPos(1,3)
    print("||  There's somehow no fuel left  ||")
    print("||  that must mean that somepony  ||")
    print("||  stole from us, or the         ||")
    print("||  getFuel() function is         ||")
    print("||  running                       ||")
    print("||                                ||")
    print("||  Can somepony please hand me   ||")
    print("||  some more fuel in slot Nr. 2? ||")
  end
  term.clear()
  term.setCursorPos(1,3)
  print("||  Current fuel Level: ",turtle.getFuelLevel(),"       ||")  
end

function bonemeal()
  moarBoneMeal()
  while not turtle.detect() do
    turtle.select(1)
    if turtle.place() then
      turtle.select(16)
      if not turtle.place() then
        term.clear()
        term.setCursorPos(1,3)
		turtle.select(16)
        print("||  No more bone meal? D:         ||")
        print("||  Please put some bone meal in  ||")
        print("||  slot Nr. 16                   ||")
        sleep(1)
		turtle.drop()
		moarBoneMeal()
      end
      elseif not turtle.place() then
        term.clear()
        term.setCursorPos(1,3)
        print("||  Not able to place sapling..   ||")
        print("||                                ||")
        print("||  Can somepony please hand me   ||")
        print("||  Some saplings?                ||")
        print("||  Spruce saplings in slot       ||")
        print("||  Nr. 1 please :)               ||")
        sleep(1)
      end
    end
    turtle.select(1)
	term.clear()
	term.setCursorPos(1,3)
	print("  Turtle is now chopping tree") 
	print("  please wait...     ") 
  end	
  
-- Ting og sager

while 1 do
  full()
  getFuel()
  bonemeal()
  turtle.dig()
  while not turtle.forward() do
    turtle.attack()
    sleep(1)
  end
  while turtle.detectUp() do
    turtle.digUp()
    turtle.up()
    moarleaves()
    turtle.turnRight()
    moarleaves()
    turtle.turnRight()
    moarleaves()
    turtle.turnRight()
    moarleaves()
    if arg == 1 then 
	  turtle.turnRight()
	end
  end

  while not turtle.detectDown() do
    turtle.down()
  end
  while not turtle.back() do
    sleep(1)
  end
  term.clear()
  term.setCursorPos(1,1)
  print("Current fuel level remaining: " ,turtle.getFuelLevel())
  moarBoneMeal()
end